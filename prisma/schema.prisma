generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  cpf      String @unique
  password String
  price    Int    @default(0)
  idTable  Int
  idHour   Int
  idCupom  Int

  table table @relation(fields: [idTable], references: [id])
  hours hours @relation(fields: [idHour], references: [id])
  cupom cupom @relation(fields: [idCupom], references: [id])
}

model table {
  id          Int    @id @default(autoincrement())
  tableNumber Int    @unique
  qtPeople    Int    @default(0)
  user        user[]
}

model hours {
  id   Int    @id @default(autoincrement())
  hour String
  day  String
  user user[]
}

model cupom {
  id      Int    @id @default(autoincrement())
  price   Int
  dateExp String @default("")
  user    user[]
}
